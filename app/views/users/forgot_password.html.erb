<div class="page-header">
  <h1>Forgot Password</h1>
</div>

<%= flash_notice %>

<p>Enter your email address below and press Send for further instructions
	showing how to reset and change your password.</p>

<%= form_tag({:action => "forgot_password_send"}, :class => 'well') do %>
<label for="email">Email</label>
<%= text_field_tag :email, params[:email], :class => 'span3' %>
<br><%= submit_tag "Send", :class => 'btn' %>
<% end %>
