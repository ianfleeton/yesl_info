<h1>Forgot Password</h1>

<%= flash_notice %>

<p>Enter your email address below and press Send for further instructions
	showing how to reset and change your password.</p>

<div class="form">
	<fieldset>
	<% form_tag :action => "forgot_password_send" do %>
		<div>
			<label for="email">Email: </label><br />
			<%= text_field_tag :email, params[:email], :class => "short" %>
		</div>
		
		<%= submit_tag "Send" %>
	<% end %>
	</fieldset>
</div>
