
<% if @user.errors.any? -%>
<div class="alert alert-error fade in">
  <a class="close" data-dismiss="alert" href="#">&times;</a>
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
<% @user.errors.full_messages.each do |msg| -%>
    <li><%= msg %></li>
<% end -%>
  </ul>
</div>
<% end -%>

<ul class="breadcrumb">
<% if admin? -%>
  <li>
    <%= link_to "Users", users_path %>
    <span class="divider">/</span>
  </li>
<% end -%>
  <li>
    <%= link_to @user.organisation.name, organisation_path(@user.organisation) %>
    <span class="divider">/</span>
  </li>
  <li>
    <%= link_to @user.name, @user %>
    <span class="divider">/</span>
  </li>
  <li class="active">
    <%= @user.new_record? ? 'New' : 'Edit' %>
  </li>
</ul>

<div class="form"> 
  <%= form_for @user do |form| %>

  <%= form.hidden_field :organisation_id %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

<% if admin? %>
	<label class="radio">
		<%= form.radio_button :admin, true %> Administrator
  </label>
  <label class="radio">
		<%= form.radio_button :admin, false %> Normal user
  </label>
  <hr>
	<label class="radio">
		<%= form.radio_button :staff, true %> Member of Your e Solutions
  </label>
  <label class="radio">
		<%= form.radio_button :staff, false %> External user
  </label>
  
<% end %>

	<br><%= submit_tag "Save", class: 'btn btn-primary' %>
	<%= link_to "Cancel", user_path(@user), class: 'btn' %>
	<% end %>

</div> 
