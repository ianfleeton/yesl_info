<h1>Edit User</h1>

<div class="form"> 
	<%= error_messages_for :user -%> 
	 
	<%= form_for :user, :url => { :action => "update",
								 :id => @user.id } do |form| %>
	<div> 
		<%= form.label :name %>:<br /> 
		<%= form.text_field :name, :size => 35, :class => "text" %> 
	</div> 
	<div> 
		<%= form.label :email %>:<br /> 
		<%= form.text_field :email, :size => 35, :class => "text" %> 
	</div>
<% if admin? %>
	<div>
		Administrator: 
		<%= form.radio_button :admin, true, :class => "radio" %> 
		<label for="user_admin_true">Yes</label> 
		<%= form.radio_button :admin, false, :class => "radio" %> 
		<label for="user_admin_false">No</label> 
	</div>
<% end %>
	
	<%= submit_tag "Save", :class => "submit" %> &nbsp; 
	<%= link_to "Cancel", user_path(@user), :class => 'button' %> 
	<% end %> 

</div> 
