<div class="page-header">
  <h1><%= @hosting_account.host_name %></h1>
</div>

<ul class="breadcrumb">
  <li>
    <%= link_to @hosting_account.domain.organisation.name, organisation_path(@hosting_account.domain.organisation) %>
  </li>
  <li>
    <%= link_to @hosting_account.domain.name, domain_path(@hosting_account.domain) %>
  </li>
  <li class="active">
    <%= @hosting_account.host_name %>
  </li>
</ul>

<p>
  <%= edit_button(@hosting_account) %>
  <%= delete_button(@hosting_account) %>
</p>

<table class="table">
  <tr>
    <th>Host name</th>
    <td><%= link_to @hosting_account.host_name, 'http://' + @hosting_account.host_name %></td>
  </tr>
  <tr>
    <th>Host IP (nslookup)</th>
    <td>
      <pre><%= `nslookup #{@hosting_account.host_name}`.strip %></pre>
    </td>
  </tr>
  <tr>
    <th>Started on</th>
    <td><%= format_date(@hosting_account.started_on) %></td></tr>
  <tr>
    <th>Backup cycle</th>
    <td><%= @hosting_account.backup_cycle %> days</td></tr>
  <tr>
    <th>Backed up on</th>
    <td><%= format_date(@hosting_account.backed_up_on) %></td></tr>
  <tr>
    <th>FTP host</th>
    <td><%= link_to @hosting_account.ftp_host, 'ftp://' + @hosting_account.username + ':' + @hosting_account.password + '@' + @hosting_account.ftp_host %></td>
  </tr>
  <tr>
    <th>Username</th>
    <td><%= @hosting_account.username %></td>
  </tr>
  <tr>
    <th>Password</th>
    <td><%= @hosting_account.password %></td>
  </tr>
</table>
