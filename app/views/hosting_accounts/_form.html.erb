<% if @hosting_account.errors.any? -%>
<div class="alert alert-error fade in">
  <a class="close" data-dismiss="alert" href="#">&times;</a>
  <h2><%= pluralize(@hosting_account.errors.count, "error") %> prohibited this hosting account from being saved:</h2>

  <ul>
<% @hosting_account.errors.full_messages.each do |msg| -%>
    <li><%= msg %></li>
<% end -%>
  </ul>
</div>
<% end -%>

<%= form_for @hosting_account do |form| %>
	<%= form.label :host_name %>
	<%= form.text_field :host_name %>


  <%= form.label :domain %>
  <%= form.collection_select :domain_id, @hosting_account.domain.organisation.domains, :id, :name %>


	<%= form.label :started_on %>
	<%= form.date_select :started_on, :order => [:day, :month, :year] %>


	<%= form.label :backup_cycle %>
	<%= form.text_field :backup_cycle, :class => 'short' %> days


	<%= form.label :backed_up_on %>
	<%= form.date_select :backed_up_on, :order => [:day, :month, :year] %>


	<%= form.label :annual_fee %>
	<%= form.text_field :annual_fee, :class => 'short' %> GBP


	<%= form.label :ftp_host, 'FTP host' %>
	<%= form.text_field :ftp_host %>


	<%= form.label :username %>
	<%= form.text_field :username %>


	<%= form.label :password %>
	<%= form.text_field :password %>

  <br><%= form.submit class: 'btn btn-primary' %>
<% end %>
